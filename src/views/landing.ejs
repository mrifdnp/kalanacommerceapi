    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      // 1. Init Animation Library
      AOS.init({ once: true, offset: 50 });

      // 2. Parallax Logic
      window.addEventListener("scroll", () => {
        const scrolled = window.pageYOffset;
        document.querySelectorAll(".parallax-el").forEach((el) => {
          const speed = el.dataset.speed || 0.1;
          el.style.transform = `translateY(${scrolled * speed}px)`;
        });

        const navbar = document.getElementById("navbar");
        if (scrolled > 50) navbar.classList.add("shadow-sm");
        else navbar.classList.remove("shadow-sm");
      });

      // 3. LOGIC CHATBOT INTEGRATION
      const chatInput = document.getElementById("chat-input");
      const sendBtn = document.getElementById("send-btn");
      const chatContainer = document.getElementById("chat-container");
      const typingIndicator = document.getElementById("typing-indicator");

      // Fungsi Menambah Bubble Chat
      function appendMessage(text, sender) {
        const isUser = sender === "user";
        const alignment = isUser ? "justify-end" : "justify-start";
        const color = isUser
          ? "bg-emerald-600 text-white rounded-tr-none"
          : "bg-gray-700 text-gray-100 rounded-tl-none border border-gray-600";

        const msgHTML = `
                <div class="flex ${alignment} mb-4 fade-in-up">
                    <div class="${color} rounded-2xl px-4 py-2 text-sm max-w-[85%] shadow-lg">
                        ${text}
                    </div>
                </div>
            `;

        // Sisipkan sebelum typing indicator
        typingIndicator.insertAdjacentHTML("beforebegin", msgHTML);
        chatContainer.scrollTop = chatContainer.scrollHeight;
      }

      // Fungsi Kirim Pesan ke API
      async function handleSendMessage() {
        const message = chatInput.value.trim();
        if (!message) return;

        // 1. Tampilkan pesan user
        appendMessage(message, "user");
        chatInput.value = "";

        // 2. Tampilkan Loading
        typingIndicator.classList.remove("hidden");
        chatContainer.scrollTop = chatContainer.scrollHeight;

        try {
          // 3. Hit API Chatbot
          // Ganti URL ini jika base URL kamu berbeda
          const response = await fetch("/api/chatbot/trial", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              // 'Authorization': 'Bearer ...' // (Opsional) Jika endpoint butuh token, ambil dari localStorage/Cookie
            },
            body: JSON.stringify({ message: message }),
          });

          const data = await response.json();

          // 4. Sembunyikan Loading
          typingIndicator.classList.add("hidden");

          if (data.status) {
            // 5. Proses Response AI & Produk Checkout
            const rawText = data.response;

            // Regex untuk memisahkan teks biasa dan JSON <checkout>
            const checkoutRegex = /<checkout>([\s\S]*?)<\/checkout>/;
            const match = rawText.match(checkoutRegex);

            let displayText = rawText.replace(checkoutRegex, "").trim(); // Hapus tag checkout dari tampilan teks

            // Tampilkan Balasan Teks AI
            appendMessage(displayText, "ai");

            // Jika ada produk rekomendasi untuk checkout
            if (match && match[1]) {
              try {
                const products = JSON.parse(match[1]);
                renderProductCard(products);
              } catch (e) {
                console.error("Gagal parsing JSON checkout", e);
              }
            }
          } else {
            appendMessage(
              "Maaf, AI sedang istirahat. Coba lagi nanti ya.",
              "ai",
            );
          }
        } catch (error) {
          console.error(error);
          typingIndicator.classList.add("hidden");
          appendMessage(
            "Terjadi kesalahan jaringan. Cek koneksi internetmu.",
            "ai",
          );
        }
      }

      // Fungsi Render Kartu Produk di Chat
      function renderProductCard(products) {
        // Contoh sederhana: Menampilkan card statis (Karena API chatbot mengembalikan ID, idealnya kita fetch detail produk lagi)
        // Di sini kita simulasi visual saja agar responsif

        const cardHTML = `
                <div class="flex justify-start mb-4 fade-in-up">
                    <div class="bg-white text-gray-800 rounded-xl overflow-hidden shadow-lg max-w-[220px] border border-gray-200">
                        <div class="h-24 bg-gray-100 flex items-center justify-center text-gray-400">
                            <i class="fas fa-image text-3xl"></i>
                        </div>
                        <div class="p-3">
                            <h5 class="font-bold text-sm">Rekomendasi Produk</h5>
                            <p class="text-xs text-gray-500 mb-2">${products.length} Item terdeteksi</p>
                            <button class="w-full bg-emerald-600 hover:bg-emerald-700 text-white py-1.5 rounded-lg text-xs font-bold transition flex items-center justify-center gap-2">
                                <i class="fas fa-shopping-cart"></i> Checkout Sekarang
                            </button>
                        </div>
                    </div>
                </div>
            `;
        typingIndicator.insertAdjacentHTML("beforebegin", cardHTML);
        chatContainer.scrollTop = chatContainer.scrollHeight;
      }

      // Event Listeners
      sendBtn.addEventListener("click", handleSendMessage);
      chatInput.addEventListener("keypress", (e) => {
        if (e.key === "Enter") handleSendMessage();
      });
    </script>
